<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.hoshinohome.model.dao.DongStoryDao">
    <insert id="insertDongStory" parameterType="com.ssafy.hoshinohome.model.dto.DongStory">
        INSERT INTO DongStory (title, content, user_id, date, region)
        VALUES (#{title}, #{content}, #{user_id}, NOW(), #{region})
    </insert>

    <update id="updateDongStory" parameterType="com.ssafy.hoshinohome.model.dto.DongStory">
        UPDATE DongStory SET title = #{title}, content = #{content}, date = NOW(), region = #{region}
        WHERE post_id = #{post_id}
    </update>

    <delete id="deleteDongStory" parameterType="int">
        DELETE FROM DongStory WHERE post_id = #{post_id}
    </delete>

    <select id="selectDongStory" parameterType="int" resultType="com.ssafy.hoshinohome.model.dto.DongStory">
        SELECT * FROM DongStory WHERE post_id = #{post_id}
    </select>

    <select id="selectDongStoriesByRegion" parameterType="String" resultType="com.ssafy.hoshinohome.model.dto.DongStory">
        SELECT * FROM DongStory WHERE region = #{region}
    </select>

    <resultMap id="DongStoryResultMap" type="com.ssafy.hoshinohome.model.dto.DongStory">
        <id column="post_id" property="post_id"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="user_id" property="user_id"/>
        <result column="date" property="date"/>
        <result column="region" property="region"/>
    </resultMap>
</mapper>
